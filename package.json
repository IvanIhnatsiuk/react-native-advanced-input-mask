{
  "name": "react-native-advanced-input-mask-monorepo",
  "private": true,
  "description": "Text input mask for React Native on iOS, Android and web. Synchronous and easy formatting without hustle",
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli android/build apps/example/android/build apps/example/android/app/build example/ios/build lib",
    "release": "release-it",
    "lint-clang": "sh clang-format.sh",
    "format": "prettier '**/*' --ignore-unknown --write"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/eslint-config": "0.80.0",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^28.1.2",
    "@types/react": "19.1.0",
    "@types/react-native-web": "0.19.2",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "clang-format": "^1.8.0",
    "commitlint": "^17.0.2",
    "del-cli": "^5.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.8.4",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-ft-flow": "^3.0.11",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-compiler": "19.1.0-rc.2",
    "eslint-plugin-react-perf": "^3.3.3",
    "jest": "^28.1.1",
    "prettier": "2.8.8",
    "release-it": "^15.0.0",
    "typescript": "^5.8.2"
  },
  "resolutions": {
    "@types/react": "19.1.0"
  },
  "workspaces": {
    "packages": [
      "apps/example",
      "package"
    ]
  },
  "packageManager": "yarn@4.6.0",
  "engines": {
    "node": ">= 20.0.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/apps/example/node_modules",
      "<rootDir>/package/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "quoteProps": "consistent",
    "trailingComma": "all"
  }
}
